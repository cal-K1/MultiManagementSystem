@namespace MultiManagementSystem.Components.Pages
@page "/view"

<h3>Pending Job Applications</h3>

@if (JobApplications != null && JobApplications.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Applicant Name</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var application in JobApplications)
            {
                <tr>
                    <td>@application.ApplicantName</td>
                    <td>@application.ApplicationState</td>
                    <td>
                        <a href="@($"/application/{application.Id}")" class="btn btn-primary">View</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No pending job applications available.</p>
}
