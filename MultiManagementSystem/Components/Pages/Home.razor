@page "/home"

<PageTitle>Home</PageTitle>

<h1 class="hr-title">HR Management System</h1>

<h2 class="hr-paragraph">Select an action below</h2>

@if (worker != null)
{
    <h2 class="hr-paragraph">Welcome, {@worker.Name}.</h2>
}

<div class="button-container">
    @if (IsWorkerManager() || authorizationService.CurrentAdmin != null)
    {
        <button class="btn btn-secondary" @onclick="NavigateView">View Pending Applications</button>
        <button class="btn btn-success" @onclick="NavigateCreate">Create New Worker</button>
    }

    <button class="btn btn-info" @onclick="NavigateRequest">Request Leave</button>

    @if (authorizationService.CurrentAdmin != null)
    {
        <button class="btn btn-info" @onclick="NavigateCompanyDetails">View Company Details</button>
    }
    else
    {
        <button class="btn btn-info" @onclick="NavigateWorkerDetails">View Worker Details</button>
        <button class="btn btn-primary" @onclick="NavigateApply">Apply for a job</button>
    }
</div>
