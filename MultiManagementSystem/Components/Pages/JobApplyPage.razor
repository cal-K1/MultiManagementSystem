@page "/apply"

<h3>Job Apply Page</h3>

<form @onsubmit="SubmitForm">
    <label for="name">Name:</label><br>
    <input type="text" id="name" @bind="_name" /><br /><br />

    <label for="phone">Phone Number:</label><br>
    <input type="tel" id="phone" @bind="_phoneNumber" /><br /><br />

    <label for="description">Description:</label><br>
    <input id="description" @bind="_description" rows="4" cols="50"><br /><br />

    <button oninput="@SubmitForm()" type="submit">Submit</button>
</form>
