@page "/apply"

<h3>Job Apply Page</h3>

@if (_submitted == false)
{
    <form>
        <label for="name">Name:</label><br>
        <input type="text" id="name" @bind-value="@_name" /><br /><br />

        <label for="phone">Phone Number:</label><br>
        <input type="tel" id="phone" @bind-value="@_phoneNumber" /><br /><br />

        <label for="description">Description:</label><br>

        <textarea type="text" id="description" @bind="@_description" rows="15" cols="70"></textarea>

        <button @onclick="SubmitForm" type="button">Submit</button>
    </form>
}
else
{
    <h1 style="text-align: center; margin-top: 50px;">Application Submitted</h1>
    <p style="text-align: center; font-size: 20px;">Thank you for submitting your job application!</p>

    <div style="text-align: center; margin-top: 30px;">
        <button @onclick="ReturnToHome" style="padding: 10px 20px; font-size: 16px; cursor: pointer;">
            Return to Home
        </button>
    </div>
}

