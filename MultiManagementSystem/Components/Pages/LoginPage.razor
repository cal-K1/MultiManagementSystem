@page "/"

<div class="login-container">
    <h3 class="login-header">Login</h3>
    <p>Please enter your worker number and password to login.</p>
    <p>If you do not have an account, please contact an administrator to create your login.</p>

    <div class="form-field">
        <label for="workerNumber">Worker Number:</label>
        <input type="text" id="workerNumber" @bind="WorkerNumber" placeholder="Enter worker number" />
    </div>

    <div class="form-field">
        <label for="password">Password:</label>
        <input type="password" id="password" @bind="Password" placeholder="Enter password" />
    </div>

    <button class="submit-button" @onclick="Submit">Login</button>

    <button class="navigate-button" @onclick="@(_ => NavigationManager.NavigateTo("/login/admin"))">Login as Admin</button>

    <button class="navigate-button" @onclick="@(_ => NavigationManager.NavigateTo("/company"))">Create a Company</button>

    <p>@Message</p>
</div>
